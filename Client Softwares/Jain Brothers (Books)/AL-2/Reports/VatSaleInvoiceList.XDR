{Sql SELECT Sale.TmpParty, Sale.TmpAdd, Sale.TmpTinNo, Sale.DocNo, Sale.Dated, Product.Category, Product.Code, Sum(ProductStock.Qty) AS TotalQty, Sum([ProductStock].[NetAmount]-[ProductStock].[TaxAmount]) AS GrossAmount, Sum(ProductStock.Taxamount) AS Tax, Sum(IIf([TaxPer]=0,[ProductStock.NetAmount],0)) AS SaleWithOutVat, Sum(IIf([TaxPer]=4,[ProductStock.NetAmount]-[ProductStock.TaxAmount],0)) AS Sale4, Sum(IIf([TaxPer]=4,[ProductStock.TaxAmount],0)) AS Vat4, Sum(IIf([TaxPer]=12.5,[ProductStock.NetAmount]-[ProductStock.TaxAmount],0)) AS Sale125, Sum(IIf([TaxPer]=12.5,[ProductStock.TaxAmount],0)) AS Vat125, Sum(ProductStock.NetAmount) AS NetAmount
FROM (ProductStock LEFT JOIN (Account RIGHT JOIN Sale ON Account.AccountID = Sale.AccountID) ON ProductStock.VoucherID = Sale.SaleID) LEFT JOIN Product ON ProductStock.ProductID = Product.ProductID
WHERE (((Sale.Dated) Between #{Pm DateFrom Pm}# And #{Pm DateTo Pm}#) AND ((ProductStock.NetAmount)<>0))  And ProductStock.TransTypeID=7 
GROUP BY Sale.TmpParty, Sale.TmpAdd, Sale.TmpTinNo, Sale.DocNo, Sale.Dated, Product.Category, Product.Code, Account.Account, Sale.BookType
HAVING (((Sale.BookType)='Sale Invoice'))
ORDER BY Sale.Dated, Sale.DocNo, Account.Account Sql}
